# Server
PORT=5000
NODE_ENV=development
DEBUG=false

# MongoDB
MONGODB_URI=mongodb+srv://<USER>:<PASSWORD>@cluster.mongodb.net
MONGODB_DB=test_cases_db
MONGODB_TIMEOUT_MS=10000

# Collections
COLLECTION_NAME=test_cases
USER_STORIES_COLLECTION_NAME=userstories
VECTOR_INDEX_NAME=vector_index_test_cases
BM25_INDEX_NAME=bm25_search

# Mistral Embedding
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_EMBEDDING_MODEL=mistral-embed
MISTRAL_EMBEDDING_DIMENSIONS=1024
MISTRAL_API_BASE=https://api.mistral.ai

# Embedding config
EMBEDDING_BATCH_SIZE=100
EMBEDDING_RETRY_MAX=3
EMBEDDING_RETRY_BACKOFF_MS=1000

# Hybrid search
HYBRID_SEARCH_BM25_WEIGHT=0.4
HYBRID_SEARCH_VECTOR_WEIGHT=0.6
SEARCH_RESULT_LIMIT=10
RERANK_TOP_K=5

# LLM Provider
LLM_PROVIDER=groq  # or azure-openai

# Groq
GROQ_API_KEY=gsk_xxxxx
GROQ_MODEL=mixtral-8x7b-instruct-v0.1
GROQ_API_BASE=https://api.groq.com/openai/v1

# Azure OpenAI
AZURE_OPENAI_API_KEY=xxxxx
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# Timeouts & limits
RERANK_TIMEOUT_MS=30000
SUMMARIZATION_TIMEOUT_MS=30000
SUMMARIZATION_TOP_K=5
MAX_REQUEST_BODY_SIZE=10mb

# CORS
CORS_ORIGIN=http://localhost:3000
